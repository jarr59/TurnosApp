@model Turnos.Models.Especialidad

 <h4>Seguro desea eliminar la siguiente especialidad?</h4>
  <div>
    <h4>Especialidad</h4>
    <hr />
    <div class="row">
      <div class="col s12 m6">
        <div class="card hoverable blue darken-1">
          <div class="card-content white-text">
            <span class="card-title">
              <h5></h5><b>@Html.DisplayFor(model => model.Descripcion)</h5></b>
            </span>
        </div>
          <div class="card-action blue-grey darken-2" y>
            <form asp-action="Delete">
              <input type="hidden" asp-for="IdEspecialidad" />
              <button class="btn waves-effect waves-light" type="submit" asp-route-id="@Model.IdEspecialidad"
                name="action">Eliminar
                <i class="material-icons right">send</i>
              </button>
              <a class=" btn waves-effect waves-light btn grey darken-4 right" asp-action="Index"><i class="material-icons left ">undo</i>Volver</a>
            </form>

          </div>
        </div>
      </div>
    </div>
  </div>